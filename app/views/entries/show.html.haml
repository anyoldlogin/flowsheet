- model_class = Entry
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:day) + ':'
  %br
  = @entry.day
%p
  %strong= model_class.human_attribute_name(:weight) + ':'
  %br
  = @entry.weight
%p
  %strong= model_class.human_attribute_name(:systolic) + ':'
  %br
  = @entry.systolic
%p
  %strong= model_class.human_attribute_name(:diastolic) + ':'
  %br
  = @entry.diastolic
%p
  %strong= model_class.human_attribute_name(:low_bag) + ':'
  %br
  = @entry.low_bag
%p
  %strong= model_class.human_attribute_name(:med_bag) + ':'
  %br
  = @entry.med_bag
%p
  %strong= model_class.human_attribute_name(:high_bag) + ':'
  %br
  = @entry.high_bag
%p
  %strong= model_class.human_attribute_name(:external_bag) + ':'
  %br
  = @entry.external_bag
%p
  %strong= model_class.human_attribute_name(:initial_drain) + ':'
  %br
  = @entry.initial_drain
%p
  %strong= model_class.human_attribute_name(:total_uf) + ':'
  %br
  = @entry.total_uf
%p
  %strong= model_class.human_attribute_name(:avg_dwell_time) + ':'
  %br
  = @entry.avg_dwell_time
%p
  %strong= model_class.human_attribute_name(:blood_sugar) + ':'
  %br
  = @entry.blood_sugar
%p
  %strong= model_class.human_attribute_name(:epo_vial_opened) + ':'
  %br
  = @entry.epo_vial_opened
%p
  %strong= model_class.human_attribute_name(:comments) + ':'
  %br
  = @entry.comments
%p
  %strong= model_class.human_attribute_name(:monthly_id) + ':'
  %br
  = @entry.monthly_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), entries_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_entry_path(@entry), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), entry_path(@entry), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
