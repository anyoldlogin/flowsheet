- model_class = Monthly
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @monthly.user_id
%p
  %strong= model_class.human_attribute_name(:month) + ':'
  %br
  = @monthly.month
%p
  %strong= model_class.human_attribute_name(:day) + ':'
  %br
  = @monthly.day
%p
  %strong= model_class.human_attribute_name(:total_volume) + ':'
  %br
  = @monthly.total_volume
%p
  %strong= model_class.human_attribute_name(:fill_volume) + ':'
  %br
  = @monthly.fill_volume
%p
  %strong= model_class.human_attribute_name(:therapy_time) + ':'
  %br
  = @monthly.therapy_time
%p
  %strong= model_class.human_attribute_name(:last_fill) + ':'
  %br
  = @monthly.last_fill
%p
  %strong= model_class.human_attribute_name(:target_weight) + ':'
  %br
  = @monthly.target_weight

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), monthlies_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_monthly_path(@monthly), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), monthly_path(@monthly), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
