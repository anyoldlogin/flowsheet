- model_class = Monthly
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:month)
      %th= model_class.human_attribute_name(:day)
      %th= model_class.human_attribute_name(:total_volume)
      %th= model_class.human_attribute_name(:fill_volume)
      %th= model_class.human_attribute_name(:therapy_time)
      %th= model_class.human_attribute_name(:last_fill)
      %th= model_class.human_attribute_name(:target_weight)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @monthlies.each do |monthly|
      %tr
        %td= link_to monthly.id, monthly_path(monthly)
        %td= monthly.user_id
        %td= monthly.month
        %td= monthly.day
        %td= monthly.total_volume
        %td= monthly.fill_volume
        %td= monthly.therapy_time
        %td= monthly.last_fill
        %td= monthly.target_weight
        %td=l monthly.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_monthly_path(monthly), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), monthly_path(monthly), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_monthly_path, :class => 'btn btn-primary'
